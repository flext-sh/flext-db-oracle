# FLEXT Oracle Database Integration Configuration
# Copy this to .env and customize for your environment

DEBUG=true
# Environment
ENVIRONMENT=development
LOG_LEVEL=INFO

# Oracle Database Connection
ORACLE_HOST=localhost
ORACLE_PASSWORD=password
ORACLE_PORT=1521
ORACLE_SERVICE_NAME=XE
ORACLE_SID=
ORACLE_TNS_ADMIN=
ORACLE_USERNAME=flext_user

ORACLE_MAX_OVERFLOW=20
ORACLE_POOL_RECYCLE=3600
# Connection Pool Configuration
ORACLE_POOL_SIZE=10
ORACLE_POOL_TIMEOUT=30

AUTO_CREATE_SCHEMA=false
INCLUDE_SYSTEM_TABLES=false
ORACLE_DEFAULT_SCHEMA=FLEXT
# Schema & Metadata
ORACLE_SCHEMA=FLEXT

# Migration & DDL
AUTO_MIGRATE=false
BACKUP_BEFORE_DDL=true
DDL_GENERATION_MODE=safe
DDL_OUTPUT_PATH=/tmp/ddl

ARRAYSIZE=100
CURSOR_SHARING=force
FETCH_SIZE=1000
# Query Configuration
QUERY_TIMEOUT=300

ENABLE_PROFILING=false
# Monitoring & Performance
ORACLE_TRACE=false
SLOW_QUERY_THRESHOLD=1000
SQL_TRACE=false

CERTIFICATE_PATH=
ENCRYPTION_ENABLED=false
SSL_ENABLED=false
# Security
WALLET_LOCATION=

# Client Configuration
ORACLE_CLIENT_VERSION=21.3
THICK_MODE=false
TNS_CONNECT_TIMEOUT=10
TNS_RETRY_COUNT=3

HEALTH_CHECK_INTERVAL=60
METRICS_PORT=9094
# Monitoring
PROMETHEUS_ENABLED=true

INCLUDE_HEADERS=true
MAX_ROWS=1000
# CLI Configuration
OUTPUT_FORMAT=table
PAGINATION_SIZE=50
